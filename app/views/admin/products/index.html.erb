<div>
  <div class="pull-right">
    <%= link_to "Create new product", new_admin_product_path, class: "btn btn-primary" %>
  </div>

  <h1>
    Product(<%= @products.total_entries %>)
  </h1>
</div>

<div>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>UUID/SKU</th>
      <th>MSRP</th>
      <th>Price</th>
      <th>Amount</th>
      <th>Status</th>
      <th></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td><%= product.uuid %></td>
      <td><%= product.msrp %></td>
      <td><%= product.price %></td>
      <td><%= product.amount %></td>
      <td><%= product.status %></td>
        <td align="right">
          <%= link_to "Edit", edit_admin_product_path(product) %> 
          <%= link_to "Delete", admin_product_path(product), method: :delete, 'data-confirm': "Are you sure to delete?" %>
          <%= link_to "Image management", admin_product_product_images_path(product_id: product) %>
        </td>
      </tr>
    <% end -%>
  </table>

  <%= will_paginate @products %>
</div>