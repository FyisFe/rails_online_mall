<h1>Sign in</h1>
<%= form_tag sessions_path, method: :post, class: "form-horizontal" do %>
  <div class="form-group">
    <div class="col-lg-12">Email</div>
    <div class="col-lg-12">
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">Password</div>
    <div class="col-lg-12">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <div class="pull-right">
        <a href="<%= new_user_path %>">Sign up</a>
      </div>
    </div>
  </div>        
  <div class="form-group">
    <div class="col-lg-12">
      <input type="submit" name="sign_submit" value="Sign in" class="col-xs-12 btn btn-primary"> 
    </div>
  </div>
<% end -%>